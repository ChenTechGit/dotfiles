{
    "label" : "lock",
    "action" : "hyprlock",
    "text" : "Lock",
    "keybind" : "l"
}

{
    "label" : "hibernate",
    "action" : "~/.local/bin/lamp off; hyprlock & sleep 1; systemctl hibernate",
    "text" : "Hibernate",
    "keybind" : "h"
}

{
    "label" : "logout",
    "action" : "killall -9 Hyprland",
    "text" : "Exit",
    "keybind" : "e"
}

{
    "label" : "shutdown",
    "action" : "systemctl poweroff",
    "text" : "Shutdown",
    "keybind" : "s"
}

{
    "label" : "suspend",
    "action" : "~/.local/bin/lamp off; hyprlock & sleep 1; systemctl suspend",
    "text" : "Suspend",
    "keybind" : "u"
}

{
    "label" : "reboot",
    "action" : "systemctl reboot",
    "text" : "Reboot",
    "keybind" : "r"
}
