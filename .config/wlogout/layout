{
  "label" : "lock",
  "action" : "hyprlock",
  "text" : "Lock (l)",
  "keybind" : "l"
}

{
  "label" : "hibernate",
  "action" : "~/.local/bin/lamp off; hyprlock & sleep 1; systemctl hibernate",
  "text" : "Hibernate (h)",
  "keybind" : "h"
}

{
  "label" : "logout",
  "action" : "killall -9 Hyprland",
  "text" : "Logout (e)",
  "keybind" : "e"
}

{
  "label" : "shutdown",
  "action" : "systemctl poweroff",
  "text" : "Shutdown (s)",
  "keybind" : "s"
}

{
  "label" : "suspend",
  "action" : "~/.local/bin/lamp off; hyprlock & sleep 1; systemctl suspend",
  "text" : "Suspend (u)",
  "keybind" : "u"
}

{
  "label" : "reboot",
  "action" : "systemctl reboot",
  "text" : "Reboot (r)",
  "keybind" : "r"
}
